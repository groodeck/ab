<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Seftware Foundation//DTD Tiles Configuration 2.1//EN"
	"src/main/webapp/WEB-INF/dtd/tiles-config_2_1.dtd">
	
	<tiles-definitions>

		<definition name="template" template="/jsp/main_template.jsp">
			<put-attribute name="header" value="/jsp/header.jsp"/>
			<put-attribute name="menu" value="/jsp/menu.jsp"/>
			<put-attribute name="subscriberDetails" value="/jsp/subscriberDetailsBar.jsp"/>
		</definition>
		
		<definition name="subscribers" extends="template">
			<put-attribute name="content" value="/jsp/subscribers.jsp"/>
		</definition>
		
		<definition name="subscriber" extends="template">
			<put-attribute name="content" value="/jsp/subscriber.jsp"/>
		</definition>
		
		<definition name="login" extends="template">
			<put-attribute name="content" value="/jsp/login.jsp"/>
		</definition>
		
		<definition name="invoices" extends="template">
			<put-attribute name="content" value="/jsp/invoices.jsp"/>
		</definition>
		
		<definition name="packages" extends="template">
			<put-attribute name="content" value="/jsp/packages.jsp"/>
		</definition>
		
		<definition name="package" extends="template">
			<put-attribute name="content" value="/jsp/package.jsp"/>
		</definition>
		
	</tiles-definitions>